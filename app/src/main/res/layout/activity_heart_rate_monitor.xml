<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_heart_rate_top_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.iteso.ruben.proyectoversion1.ActivityHeartRateMonitor"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/activity_heart_rate_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/activity_heart_rate_text_default"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.iteso.ruben.proyectoversion1.Views.HeartBeatView
                android:id="@+id/activity_heart_rate_heartBeatView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

    </LinearLayout>

    <SurfaceView
        android:id="@+id/activity_heart_rate_preview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

</LinearLayout>
