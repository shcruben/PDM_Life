<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:gravity="center_horizontal|center_vertical"
    android:orientation="vertical" >


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/life_logo"
        android:scaleX="0.5"
        android:scaleY="0.5" />

    <ImageView
        android:id="@+id/happy_hamtaro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/activity_home_background"
        android:layout_alignLeft="@id/activity_home_background"
        android:layout_marginBottom="@dimen/fab_margin"
        android:background="@drawable/excited"
        android:scaleType="centerCrop"
        android:scaleX="1.2"
        android:scaleY="1.2" />
    <TextView
        android:id="@+id/authorizeText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:layout_marginBottom="15dp"
        android:text="@string/press_button_to_connect"
        android:textColor="#222"
        android:textSize="22sp" />

    <Button
        android:id="@+id/authorizeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:background="@drawable/jawbone_button" />

    <Button
        android:id="@+id/authorizeButton2"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:background="@drawable/btn_black"
        android:visibility="gone"/>

</LinearLayout>