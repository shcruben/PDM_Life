<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/light"
    tools:context="com.iteso.ruben.proyectoversion1.ActivityGetUserDAta">
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">

      <ImageButton
          android:id="@+id/activity_back_button2"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="start"
          android:background="@drawable/arrow_sel"
          />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Insert weight"
            android:textStyle="bold"
            android:textSize="25sp"
            />

        <NumberPicker
            android:id="@+id/weight_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX="0.8"
            android:scaleY="0.6"
            android:theme="@style/NumberPickerText"
            android:scrollbarStyle="insideInset">

        </NumberPicker>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Insert height"
            android:textStyle="bold"
            android:textSize="25sp"/>

        <NumberPicker
            android:id="@+id/height_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/NumberPickerText"
            android:scaleX="0.8"
            android:scaleY="0.6">

        </NumberPicker>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Insert your age"
            android:textStyle="bold"
            android:textSize="25sp"/>

        <NumberPicker
            android:id="@+id/age_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/NumberPickerText"
            android:scaleX="0.8"
            android:scaleY="0.6">

        </NumberPicker>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Insert your level of exercise"
            android:textStyle="bold"
            android:textSize="25sp"
            />

        <NumberPicker
            android:id="@+id/exercise_level_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/NumberPickerText"
            android:scaleX="0.8"
            android:scaleY="0.6">

        </NumberPicker>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender"
            android:textStyle="bold"
            android:textSize="25sp"/>

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <RadioButton
                android:id="@+id/activity_get_user_data_gender_f"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Woman"
                android:onClick="onClickGender"/>

            <RadioButton
                android:id="@+id/activity_get_user_data_gender_m"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Male"
                android:onClick="onClickGender"/>

        </RadioGroup>
        <Button
            android:id="@+id/save_user_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/fab_margin"
            android:layout_marginBottom="@dimen/fab_margin"
            android:background="@drawable/button_selector"
            android:text="Save"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="@dimen/text_SIZE"
            />



    </LinearLayout>

  </RelativeLayout>

</ScrollView>
